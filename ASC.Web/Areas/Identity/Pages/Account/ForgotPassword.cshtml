@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title center">Quên mật khẩu?</span>
                    <form method="post" class="form-horizontal">
                        <div asp-validation-summary="All" class="red-text"></div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input asp-for="Input.Email" type="email" class="validate">
                                <label asp-for="Input.Email">Email</label>
                                <span class="helper-text" data-error="Email không hợp lệ" data-success="Hợp lệ"></span>
                            </div>
                        </div>
                        <div class="row center">
                            <button class="btn waves-effect waves-light blue darken-2" type="submit">
                                Gửi yêu cầu
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
